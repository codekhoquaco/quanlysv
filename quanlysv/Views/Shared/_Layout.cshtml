<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản Lý Sinh Viên</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
            margin: 0;
        }
        .sidebar {
            width: 240px;
            background-color: #343a40;
            color: white;
            flex-shrink: 0;
            display: flex;
            flex-direction: column;
        }
        .sidebar a {
            color: white;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }
        .sidebar a:hover {
            background-color: #495057;
        }
        .content-wrapper {
            flex-grow: 1;
            background: #f8f9fa;
            padding: 20px;
        }
        .sidebar .title {
            font-size: 20px;
            font-weight: bold;
            text-align: center;
            padding: 16px;
            border-bottom: 1px solid #495057;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <div class="title">🎓 Quản Lý SV</div>
        <a href="/Home/Index">🏠 Trang chủ</a>
        <a href="/Student/Index">👨‍🎓 Sinh viên</a>
        <a href="/Class/Index">🏫 Lớp học</a>
        <a href="/Faculty/Index">🏢 Khoa</a>
        <a href="/Subject/Index">📚 Môn học</a>
        <a href="/Teacher/Index">👩‍🏫 Giảng viên</a>
        <a href="/Grade/Index">📝 Điểm số</a>
        <a class="btn btn-danger" asp-controller="Auth" asp-action="Logout">Đăng xuất</a>
    </div>

    <div class="content-wrapper">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
