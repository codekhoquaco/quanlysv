<form method="get" asp-action="Index"
      class="d-flex mb-4 align-items-center search-box">

    <input type="text"
           name="keyword"
           value="@Context.Request.Query["keyword"]"
           class="form-control search-input"
           placeholder="Tìm kiếm theo tên..." />

    <button type="submit" class="btn btn-primary search-btn">
        Tìm
    </button>
</form>
<style>
    .search-box {
        max-width: 280px; /* ✅ làm nhỏ toàn bộ khung */
    }

    .search-input {
        height: 32px; /* ✅ giảm chiều cao */
        font-size: 14px; /* ✅ chữ nhỏ lại */
        padding: 4px 8px;
        border-radius: 6px;
    }

    .search-btn {
        height: 32px; /* ✅ nút bằng với ô input */
        font-size: 14px;
        padding: 0 12px; /* ✅ nhỏ gọn */
        margin-left: 6px;
        border-radius: 6px;
    }
</style>
