@model IEnumerable<QuanLySinhVien.Models.Faculty>

@{
    ViewData["Title"] = "Danh sách Khoa";
}

<h1>Danh sách Khoa 🏫</h1>
<hr />

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Thêm Khoa Mới
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover table-striped mb-0">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FacultyName)</th>
                    <th>@Html.DisplayNameFor(model => model.OfficeLocation)</th>
                    <th>@Html.DisplayNameFor(model => model.Phone)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th style="width: 150px;">Hành động</th>
                </tr>
            </thead>
            <tbody>
                <partial name="_FacultyTableBody" model="Model" />
            </tbody>
        </table>
    </div>
</div>