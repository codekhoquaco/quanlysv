@model IEnumerable<QuanLySinhVien.Models.Class>

@{
    ViewData["Title"] = "Danh sách Lớp Học";
}

<h1>Danh sách Lớp Học 📚</h1>
<hr />

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="AddClass" class="btn btn-primary">
        <i class="fas fa-plus"></i> Thêm Lớp Mới
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover table-striped mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Mã Lớp</th>
                    <th>@Html.DisplayNameFor(model => model.ClassName)</th>
                    <th>@Html.DisplayNameFor(model => model.FacultyID)</th>
                    <th>@Html.DisplayNameFor(model => model.AcademicYear)</th>
                    <th>@Html.DisplayNameFor(model => model.HomeroomTeacher)</th>
                    <th style="width: 150px;">Hành động</th>
                </tr>
            </thead>
            <tbody>
                <partial name="_ClassTableBody" model="Model" />
            </tbody>
        </table>
    </div>
</div>