@model IEnumerable<QuanLySinhVien.Models.Teacher>

@{
    ViewData["Title"] = "Danh sách Giáo viên";
}

<h1>Danh sách Giáo viên 🧑‍🏫</h1>
<hr />

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Thêm Giáo viên Mới
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover table-striped mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Họ Tên</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.Gender)</th>
                    <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
                    <th>@Html.DisplayNameFor(model => model.Position)</th>
                    <th>@Html.DisplayNameFor(model => model.FacultyID)</th>
                    <th style="width: 150px;">Hành động</th>
                </tr>
            </thead>
            <tbody>
                <partial name="_TeacherTableBody" model="Model" />
            </tbody>
        </table>
    </div>
</div>