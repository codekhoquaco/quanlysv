@model QuanLySinhVien.Models.Student
<div class="row">
    <div class="col-md-6">
        <div class="form-group mb-3">
            <label>Họ</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Tên</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Giới tính</label>
            <select asp-for="Gender" class="form-select">
                <option value="Nam">Nam</option>
                <option value="Nữ">Nữ</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Ngày sinh</label>
            <input asp-for="DateOfBirth" type="date" class="form-control" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>SĐT</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group mb-3">
            <label>CMND/CCCD</label>
            <input asp-for="NationalID" class="form-control" />
            <span asp-validation-for="NationalID" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Ngày nhập học</label>
            <input asp-for="EnrollmentDate" type="date" class="form-control" />
            <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ClassID" class="control-label">Mã lớp</label>
            <select asp-for="ClassID"
                    class="form-select" 
                    asp-items="@(ViewData["ClassList"] as SelectList)">
                <option value="">-- Chọn lớp --</option>
            </select>
            <span asp-validation-for="ClassID" class="text-danger"></span>
        </div>

        @* <div class="form-group mb-3">
            <label asp-for="ClassName" class="control-label">Tên lớp</label>
            <input asp-for="ClassName" class="form-control" readonly="readonly" />
            <span asp-validation-for="ClassName" class="text-danger"></span>
        </div> *@

        <div class="form-group mb-3">
            <label>Địa chỉ</label>
            <textarea asp-for="Address" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
</div>