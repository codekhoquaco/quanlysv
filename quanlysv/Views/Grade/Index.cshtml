@model IEnumerable<QuanLySinhVien.Models.Grade>

@{
    ViewData["Title"] = "Danh sách Điểm Số";
}

<h1>Danh sách Điểm Số 💯</h1>
<hr />

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Thêm Điểm Mới
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover table-striped mb-0">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.EnrollmentID)</th>
                    <th>@Html.DisplayNameFor(model => model.MidtermScore)</th>
                    <th>@Html.DisplayNameFor(model => model.FinalScore)</th>
                    <th>@Html.DisplayNameFor(model => model.AverageScore)</th>
                    <th>@Html.DisplayNameFor(model => model.GradeLetter)</th>
                    <th style="width: 150px;">Hành động</th>
                </tr>
            </thead>
            <tbody>
                <partial name="_GradeTableBody" model="Model" />
            </tbody>
        </table>
    </div>
</div>