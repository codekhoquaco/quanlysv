@model QuanLySinhVien.Models.Grade

@{
    ViewData["Title"] = "Xóa Điểm Số";
}

<h1 class="text-danger">❌ Xác nhận Xóa Điểm Số</h1>
<hr />

<div class="card border-danger mb-4 shadow-sm">

    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">CẢNH BÁO: Điểm số sẽ bị xóa vĩnh viễn!</h5>
    </div>

    <div class="card-body">
        <h4 class="card-title text-danger mb-4">Bạn có chắc chắn muốn xóa điểm số này?</h4>

        <div class="p-3 mb-4 border rounded bg-light">
            <h5 class="text-primary mb-3">Thông tin chi tiết Điểm Số</h5>

            <partial name="_GradeDetails" model="Model" />

        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="GradeID" />

            <input type="submit" value="✅ Xác nhận Xóa Vĩnh Viễn" class="btn btn-danger btn-lg me-3" />

            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="fas fa-arrow-left"></i> Hủy Bỏ
            </a>
        </form>
    </div>
</div>